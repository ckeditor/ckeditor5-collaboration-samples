# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = tab
tab_width = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.json,.*}]
indent_style = space
tab_width = 2
